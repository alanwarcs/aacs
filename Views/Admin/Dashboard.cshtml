@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid p-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Total Visits Display -->
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5>Total Website Visits</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                }
                else
                {
                    <h3 class="display-4">@(ViewBag.TotalSessions ?? 0)</h3>
                    <p class="text-muted">Total visits to the website since tracking began</p>
                }
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5>Recent Activity</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    @if(ViewBag.AdminLogs != null)
                    {
                        foreach(var log in (List<AdminLog>)ViewBag.AdminLogs)
                        {
                            <li>
                                <strong>@log.AdminName:</strong> @log.Action <br>
                                <small>@log.Timestamp.ToLocalTime()</small>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>