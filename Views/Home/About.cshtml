@{
    ViewBag.Title = "About Us";
}

<div class="container my-5">
    <!-- About Header -->
    <div class="row align-items-center mb-5">
         <div class="col-md-6 ">
            <div class="d-flex logo">
                <a class="logo-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="d-flex flex-column ms-1">
                        <h1 class="main m-0 fs-2">AL ANWAR</h1>
                        <hr class="m-0 logo-line">
                        <p class="secondary m-0">Creativity Studio</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <h1 class="fw-bold">About Al Anwar Creativity Studio</h1>
            <p class="text-muted">
                At Al Anwar Creativity Studio, we specialize in creating tailored software, web solutions, and SaaS
                applications. We thrive on innovation, combining technical expertise with creative problem-solving to
                deliver impactful solutions for businesses of all sizes.
            </p>
        </div>
    </div>

    <!-- Mission and Vision -->
    <div class="row mb-5">
        <div class="col-md-6">
            <h2 class="display-6">Our Mission</h2>
            <p class="text-muted">
                Our mission is to empower businesses by delivering high-quality, scalable, and innovative software
                solutions that align with their goals. We aim to foster creativity and technical excellence in every
                project we undertake.
            </p>
        </div>
        <div class="col-md-6">
            <h2 class="display-6">Our Vision</h2>
            <p class="text-muted">
                To be a global leader in creativity-driven technology solutions, recognized for our ability to transform
                ideas into successful realities and for nurturing long-term client relationships.
            </p>
        </div>
    </div>

    <!-- Key Features/Values -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="display-6 text-center mb-4">Why Choose Us?</h2>
            <ul class="list-group">
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Expertise in
                    modern technologies like MERN, Laravel, and .NET.</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Custom solutions
                    tailored to meet unique client needs.</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Scalable SaaS
                    platforms and creative web development.</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Focus on
                    innovation, quality, and client satisfaction.</li>
            </ul>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row text-center mb-5 pb-5">
        <div class="col-12">
            <h2 class="display-6 mb-3">Ready to Work With Us?</h2>
            <p class="text-muted">Let us bring your ideas to life with tailored software solutions that meet your
                business needs.</p>
            <a href="/home/Contact" class="btn btn-custom">Get in Touch</a>
        </div>
    </div>
</div>
