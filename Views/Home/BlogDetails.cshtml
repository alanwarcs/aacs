@model Blog

@{
    ViewBag.Title = Model.Title;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Blog Header -->
            <h1 class="fw-bold text-dark mb-3">@Model.Title</h1>
            <p class="text-muted">Published on @(Model.DatePublished?.ToString("MMMM dd, yyyy") ?? "Not Published")</p>

            <!-- Blog Featured Image -->
            @if (!string.IsNullOrEmpty(Model.HeaderImageUrl))
            {
                <div class="text-center mb-4">
                    <img src="@Model.HeaderImageUrl" class="img-fluid rounded shadow-sm blog-header-image"
                        alt="@Model.Title" loading="lazy">
                </div>
            }

            <!-- Ad After Title (In-Article Ad) -->
            <div class="my-4 text-center">
                <script async
                    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3497395369836145"
                    crossorigin="anonymous"></script>
                <!-- aacs blogs -->
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-3497395369836145"
                    data-ad-slot="1457398382" data-ad-format="auto" data-full-width-responsive="true"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>

            <!-- Blog Content -->
            <div class="blog-content text-justify fs-5 lh-lg">
                @Html.Raw(Model.Content) <!-- If content contains HTML -->
            </div>

            <!-- Ad in Middle of Content -->
            <div class="my-4 text-center">
                <script async
                    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3497395369836145"
                    crossorigin="anonymous"></script>
                <!-- aacs blogs -->
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-3497395369836145"
                    data-ad-slot="1457398382" data-ad-format="auto" data-full-width-responsive="true"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>

            <!-- Back to Blogs Button -->
            <div class="my-4">
                <a href="@Url.Action("Blogs", "Home")" class="btn btn-custom px-4 py-2">
                    <i class="bi bi-arrow-left"></i> Back to Blogs
                </a>
            </div>
        </div>
    </div>
</div>
